<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.cmerrick.moviepicker.details.MovieDetailsFragment">


    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/backdrop"/>
    <TextView
            android:id="@+id/title"
            android:text="title"
            style="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/vote_average"
            android:text="vote average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/title" android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/release_date"
            android:text="release date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vote_average" android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/summary"
            android:text="summary"
            android:paddingTop="@dimen/summary_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/release_date"/>



</RelativeLayout>
